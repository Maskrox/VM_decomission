<Configuration>
  <Infrastructure>
    <VmmServers>
      <Server>vmm-prod-01.corp.contoso.local</Server>
      <Server>vmm-prod-02.corp.contoso.local</Server>
    </VmmServers>
    
    <DomainController>DC-PRIMARY-01.corp.contoso.local</DomainController>
    <SccmSiteCode>PRD</SccmSiteCode>
    <SccmProvider>sccm-prov-01.corp.contoso.local</SccmProvider>
    <DnsZone>corp.contoso.local</DnsZone>
    <TargetOU>OU=Workstations,DC=corp,DC=contoso,DC=local</TargetOU>
    
    <CitrixController>ctx-ddc-01.corp.contoso.local</CitrixController>
  </Infrastructure>

  <Security>
    <AllowedADGroup>GG-IT-Admins</AllowedADGroup>
    <AuditLogPath>C:\Logs\AppAudit.log</AuditLogPath>
    
    <EmailSettings>
      <SmtpServer>smtp.contoso.com</SmtpServer>
      <SmtpPort>587</SmtpPort>
      <SenderEmail>no-reply@contoso.com</SenderEmail>
      <RecipientEmails>it-alerts@contoso.com,ops-team@contoso.com</RecipientEmails>
      <EnableSsl>true</EnableSsl>
      </EmailSettings>
  </Security>
</Configuration>
